{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [
    "./public/tsx/**/**/*.tsx",
    "./public/tsx/**/**/*.ts"
  ]
}